@inherits LayoutComponentBase

<div class="flex h-screen bg-gray-50">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r border-gray-200 hidden md:flex flex-col">
        <div class="p-4 border-b border-gray-200">
            <div class="flex items-center gap-2">
                <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">M</span>
                </div>
                <span class="text-lg font-bold text-gray-900">Doctor Portal</span>
            </div>
        </div>
        <nav class="flex-1 p-4 space-y-1">
            <a href="/doctor/dashboard" class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 transition-colors">
                Dashboard
            </a>
            <a href="/doctor/patients" class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-500 rounded-lg hover:bg-gray-100 transition-colors">
                My Patients
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Topbar -->
        <header class="bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">Doctor Portal</h2>
            <div class="flex items-center gap-3">
                <span class="text-sm text-gray-500">Welcome, Doctor</span>
            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto p-6">
            @Body
        </main>

        <!-- Footer -->
        <footer class="bg-white border-t border-gray-200 px-6 py-3 text-center">
            <span class="text-xs text-gray-400">&copy; @DateTime.Now.Year MyDentist. All rights reserved.</span>
        </footer>
    </div>
</div>
