@page "/doctor/login"
@using Microsoft.AspNetCore.Components.Web
@using MyDentist.Web.Layouts
@using MyDentist.Web.Shared.Localization
@using Microsoft.Extensions.Localization
@layout AuthLayout
@inject IStringLocalizer<Global> L

<PageTitle>@L["DoctorLogin_Title"]</PageTitle>

<div class="flex justify-center">
    <div class="w-full max-w-md bg-white shadow-sm border border-gray-100 rounded-2xl p-6 sm:p-8">
        <div class="text-center">
            <h1 class="text-2xl font-semibold text-gray-900">@L["DoctorLogin_Title"]</h1>
            <p class="mt-2 text-sm text-gray-500">@L["DoctorLogin_Subtitle"]</p>
        </div>

        <form class="mt-8 space-y-5" novalidate>
            <div>
                <label class="block text-sm font-medium text-gray-700">@L["Auth_EmailLabel"]</label>
                <input type="email" autocomplete="username" placeholder="@L["Auth_EmailPlaceholder"]" class="mt-2 w-full rounded-lg border border-gray-200 px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">@L["Auth_PasswordLabel"]</label>
                <input type="password" autocomplete="current-password" placeholder="@L["Auth_PasswordPlaceholder"]" class="mt-2 w-full rounded-lg border border-gray-200 px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500" />
            </div>
            <div class="flex items-center justify-between text-sm">
                <label class="inline-flex items-center gap-2 text-gray-600">
                    <input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                    @L["Auth_RememberMe"]
                </label>
                <a href="#" class="text-primary-600 hover:text-primary-700">@L["Auth_ForgotPassword"]</a>
            </div>
            <button type="submit" class="w-full rounded-lg bg-primary-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-primary-700 transition-colors">
                @L["Auth_SignInDoctor"]
            </button>
        </form>

        <div class="mt-6 rounded-lg bg-gray-50 px-4 py-3 text-xs text-gray-500">
            @L["Auth_SecureNote"]
        </div>
    </div>
</div>
