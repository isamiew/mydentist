@page "/"
@using Microsoft.AspNetCore.Components.Web
@using MyDentist.Web.Layouts
@using MyDentist.Web.Shared.Localization
@using Microsoft.Extensions.Localization
@layout PublicLayout
@inject IStringLocalizer<Global> L

<PageTitle>@L["Public_Title"]</PageTitle>

<section class="relative overflow-hidden bg-white pt-20 pb-28 sm:pt-24 sm:pb-32">

		<!-- Decorative blobs -->
		<div class="absolute top-0 right-0 w-[480px] h-[480px] bg-primary-50 rounded-full -translate-y-1/3 translate-x-1/4 -z-10 blur-3xl opacity-70"></div>
		<div class="absolute bottom-0 left-0 w-[360px] h-[360px] bg-blue-50 rounded-full translate-y-1/2 -translate-x-1/4 -z-10 blur-2xl opacity-60"></div>

		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center max-w-4xl mx-auto">

						<!-- Badge -->
						<div class="inline-flex items-center gap-2 px-4 py-1.5 bg-primary-50 text-primary-700 text-xs font-semibold rounded-full border border-primary-100 mb-7 animate-fade-in">
								<span class="w-1.5 h-1.5 bg-primary-500 rounded-full animate-pulse"></span>
								500+ @L["Stats_Dentists"]
						</div>

						<!-- Heading -->
						<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900 leading-tight animate-slide-up">
								@L["Hero_Title"]
								<span class="block text-primary-600">@L["Hero_TitleHighlight"]</span>
						</h1>

						<!-- Subtitle -->
						<p class="mt-6 text-lg text-gray-500 max-w-2xl mx-auto leading-relaxed animate-slide-up-delay">
								@L["Hero_Subtitle"]
						</p>

						<!-- CTA row -->
						<div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3 animate-slide-up-delay-2">
								<a href="/#find-dentist" class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-7 py-3 bg-primary-600 text-white text-sm font-semibold rounded-xl hover:bg-primary-700 transition-all duration-200 shadow-sm hover:shadow-lg hover:-translate-y-0.5">
										@L["Search_Button"]
										<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
												<path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
										</svg>
								</a>
								<a href="/login" class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-7 py-3 bg-white text-gray-700 text-sm font-semibold rounded-xl border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-all duration-200 shadow-sm">
										@L["Nav_Login"]
								</a>
						</div>
				</div>

				<!-- Search box -->
				<div class="mt-12 max-w-3xl mx-auto">
						<div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-4 sm:p-5">
								<div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
										<div>
												<label class="block text-xs font-semibold text-gray-400 mb-1.5 uppercase tracking-wider">@L["Search_Label"]</label>
												<input type="text" placeholder="@L["Search_Placeholder"]"
														class="w-full px-3.5 py-2.5 rounded-xl border border-gray-200 bg-gray-50 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent focus:bg-white transition-all placeholder:text-gray-400"/>
										</div>
										<div>
												<label class="block text-xs font-semibold text-gray-400 mb-1.5 uppercase tracking-wider">@L["Search_Region"]</label>
												<select class="w-full px-3.5 py-2.5 rounded-xl border border-gray-200 bg-gray-50 text-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-primary-500 transition-all">
														<option>@L["Search_AllRegions"]</option>
												</select>
										</div>
										<div>
												<label class="block text-xs font-semibold text-gray-400 mb-1.5 uppercase tracking-wider">@L["Search_Service"]</label>
												<select class="w-full px-3.5 py-2.5 rounded-xl border border-gray-200 bg-gray-50 text-sm text-gray-700 focus:outline-none focus:ring-2 focus:ring-primary-500 transition-all">
														<option>@L["Search_AllServices"]</option>
														<option>@L["Specialty_General"]</option>
														<option>@L["Specialty_Orthodontics"]</option>
														<option>@L["Specialty_Cosmetic"]</option>
														<option>@L["Specialty_Surgery"]</option>
												</select>
										</div>
								</div>
								<div class="mt-3 flex justify-end">
										<button class="w-full sm:w-auto px-8 py-2.5 bg-primary-600 text-white text-sm font-semibold rounded-xl hover:bg-primary-700 transition-all duration-200 shadow-sm hover:shadow-md hover:-translate-y-px active:translate-y-0">
												@L["Search_Button"]
										</button>
								</div>
						</div>
				</div>
		</div>
</section>

<!-- ─── Stats ─────────────────────────────────────────────── -->
<section class="py-14 bg-gray-50 border-y border-gray-100">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 sm:grid-cols-3 gap-5">
						<div class="bg-white rounded-2xl border border-gray-100 px-6 py-8 text-center hover:shadow-md transition-shadow duration-300">
								<div class="text-4xl font-extrabold text-primary-600 tracking-tight">500+</div>
								<div class="mt-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">@L["Stats_Dentists"]</div>
						</div>
						<div class="bg-white rounded-2xl border border-gray-100 px-6 py-8 text-center hover:shadow-md transition-shadow duration-300">
								<div class="text-4xl font-extrabold text-primary-600 tracking-tight">14</div>
								<div class="mt-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">@L["Stats_Regions"]</div>
						</div>
						<div class="bg-white rounded-2xl border border-gray-100 px-6 py-8 text-center hover:shadow-md transition-shadow duration-300">
								<div class="text-4xl font-extrabold text-primary-600 tracking-tight">50K+</div>
								<div class="mt-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">@L["Stats_Patients"]</div>
						</div>
				</div>
		</div>
</section>

<!-- ─── How it works ──────────────────────────────────────── -->
<section class="py-20 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-14">
						<span class="inline-block px-3 py-1 text-xs font-semibold text-primary-600 bg-primary-50 rounded-full border border-primary-100 mb-4">@L["HowItWorks_Badge"]</span>
						<h2 class="text-3xl font-bold text-gray-900 tracking-tight">@L["HowItWorks_Title"]</h2>
						<p class="mt-3 text-gray-500 max-w-xl mx-auto">@L["HowItWorks_Subtitle"]</p>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						<div class="flex flex-col items-center text-center px-4">
								<div class="w-16 h-16 rounded-2xl bg-primary-50 border-2 border-primary-100 flex items-center justify-center mb-5">
										<svg class="w-7 h-7 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
												<path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 15.803a7.5 7.5 0 0010.607 10.607z"/>
										</svg>
								</div>
								<div class="w-7 h-7 rounded-full bg-primary-600 text-white text-xs font-bold flex items-center justify-center mb-3">1</div>
								<h3 class="text-base font-semibold text-gray-900 mb-2">@L["HowItWorks_Step1_Title"]</h3>
								<p class="text-sm text-gray-500 leading-relaxed">@L["HowItWorks_Step1_Desc"]</p>
						</div>
						<div class="flex flex-col items-center text-center px-4">
								<div class="w-16 h-16 rounded-2xl bg-primary-50 border-2 border-primary-100 flex items-center justify-center mb-5">
										<svg class="w-7 h-7 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
												<path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5"/>
										</svg>
								</div>
								<div class="w-7 h-7 rounded-full bg-primary-600 text-white text-xs font-bold flex items-center justify-center mb-3">2</div>
								<h3 class="text-base font-semibold text-gray-900 mb-2">@L["HowItWorks_Step2_Title"]</h3>
								<p class="text-sm text-gray-500 leading-relaxed">@L["HowItWorks_Step2_Desc"]</p>
						</div>
						<div class="flex flex-col items-center text-center px-4">
								<div class="w-16 h-16 rounded-2xl bg-primary-50 border-2 border-primary-100 flex items-center justify-center mb-5">
										<svg class="w-7 h-7 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
												<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
										</svg>
								</div>
								<div class="w-7 h-7 rounded-full bg-primary-600 text-white text-xs font-bold flex items-center justify-center mb-3">3</div>
								<h3 class="text-base font-semibold text-gray-900 mb-2">@L["HowItWorks_Step3_Title"]</h3>
								<p class="text-sm text-gray-500 leading-relaxed">@L["HowItWorks_Step3_Desc"]</p>
						</div>
				</div>
		</div>
</section>

<!-- ─── Regional map ──────────────────────────────────────── -->
<section id="find-dentist" class="py-20 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-10">
						<h2 class="text-3xl font-bold text-gray-900 tracking-tight">@L["Map_Title"]</h2>
						<p class="mt-3 text-gray-500">@L["Map_Subtitle"]</p>
				</div>
				<div class="bg-white rounded-3xl border border-gray-100 shadow-sm overflow-hidden">
						<img src="img/map-placeholder.svg" alt="@L["Map_Title"]" class="w-full h-auto"/>
				</div>
		</div>
</section>

<!-- ─── Dentist cards ─────────────────────────────────────── -->
<section id="services" class="py-20 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
						<h2 class="text-3xl font-bold text-gray-900 tracking-tight">@L["Dentists_Title"]</h2>
						<p class="mt-3 text-gray-500">@L["Dentists_Subtitle"]</p>
				</div>
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">

						<div class="group bg-white rounded-2xl border border-gray-100 p-5 shadow-sm hover:shadow-xl hover:-translate-y-1.5 transition-all duration-300">
								<div class="flex items-center gap-4 mb-4">
										<div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center text-primary-700 font-bold text-sm shrink-0">XS</div>
										<div class="min-w-0">
												<h3 class="font-semibold text-gray-900 truncate">Xusniddin Salomov</h3>
												<p class="text-xs text-primary-600 font-medium mt-0.5">@L["Specialty_General"]</p>
										</div>
								</div>
								<div class="flex items-center gap-1.5 mb-4">
										<span class="text-yellow-400 text-xs">★★★★★</span>
										<span class="text-xs text-gray-400 font-medium">5.0 (128 @L["Dentists_Reviews"])</span>
								</div>
								<div class="flex items-center justify-between pt-4 border-t border-gray-50">
										<span class="text-xs text-gray-400 flex items-center gap-1">
												<svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>
												Kosonsoy
										</span>
										<button class="text-xs font-semibold text-primary-600 hover:text-primary-700 transition-colors flex items-center gap-1 group-hover:gap-2">
												@L["Dentists_BookNow"] <span>→</span>
										</button>
								</div>
						</div>

						<div class="group bg-white rounded-2xl border border-gray-100 p-5 shadow-sm hover:shadow-xl hover:-translate-y-1.5 transition-all duration-300">
								<div class="flex items-center gap-4 mb-4">
										<div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center text-green-700 font-bold text-sm shrink-0">AS</div>
										<div class="min-w-0">
												<h3 class="font-semibold text-gray-900 truncate">Azizbek Salomov</h3>
												<p class="text-xs text-primary-600 font-medium mt-0.5">@L["Specialty_Orthodontics"]</p>
										</div>
								</div>
								<div class="flex items-center gap-1.5 mb-4">
										<span class="text-yellow-400 text-xs">★★★★★</span>
										<span class="text-xs text-gray-400 font-medium">4.9 (96 @L["Dentists_Reviews"])</span>
								</div>
								<div class="flex items-center justify-between pt-4 border-t border-gray-50">
										<span class="text-xs text-gray-400 flex items-center gap-1">
												<svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>
												Qo'qumboy
										</span>
										<button class="text-xs font-semibold text-primary-600 hover:text-primary-700 transition-colors flex items-center gap-1 group-hover:gap-2">
												@L["Dentists_BookNow"] <span>→</span>
										</button>
								</div>
						</div>

						<div class="group bg-white rounded-2xl border border-gray-100 p-5 shadow-sm hover:shadow-xl hover:-translate-y-1.5 transition-all duration-300">
								<div class="flex items-center gap-4 mb-4">
										<div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-purple-100 to-purple-200 flex items-center justify-center text-purple-700 font-bold text-sm shrink-0">IS</div>
										<div class="min-w-0">
												<h3 class="font-semibold text-gray-900 truncate">Izzatbek Salomov</h3>
												<p class="text-xs text-primary-600 font-medium mt-0.5">@L["Specialty_Cosmetic"]</p>
										</div>
								</div>
								<div class="flex items-center gap-1.5 mb-4">
										<span class="text-yellow-400 text-xs">★★★★<span class="text-gray-200">★</span></span>
										<span class="text-xs text-gray-400 font-medium">4.8 (74 @L["Dentists_Reviews"])</span>
								</div>
								<div class="flex items-center justify-between pt-4 border-t border-gray-50">
										<span class="text-xs text-gray-400 flex items-center gap-1">
												<svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>
												Kosonsoy
										</span>
										<button class="text-xs font-semibold text-primary-600 hover:text-primary-700 transition-colors flex items-center gap-1 group-hover:gap-2">
												@L["Dentists_BookNow"] <span>→</span>
										</button>
								</div>
						</div>
				</div>
		</div>
</section>

<!-- ─── CTA banner ────────────────────────────────────────── -->
<section class="py-16 bg-gradient-to-br from-primary-600 to-primary-800">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h2 class="text-3xl font-bold text-white tracking-tight">@L["CTA_Title"]</h2>
				<p class="mt-3 text-primary-100 text-lg">@L["CTA_Subtitle"]</p>
				<div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
						<a href="#find-dentist" class="w-full sm:w-auto px-8 py-3 bg-white text-primary-700 text-sm font-bold rounded-xl hover:bg-primary-50 transition-all duration-200 shadow-md hover:shadow-lg hover:-translate-y-0.5">
								@L["Search_Button"]
						</a>
						<a href="/login" class="w-full sm:w-auto px-8 py-3 bg-white/10 text-white text-sm font-semibold rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-200">
								@L["Nav_Login"]
						</a>
				</div>
		</div>
</section>
