@page "/"
@using Microsoft.AspNetCore.Components.Web
@using MyDentist.Web.Layouts
@using MyDentist.Web.Shared.Localization
@using Microsoft.Extensions.Localization
@layout PublicLayout
@inject IStringLocalizer<Global> L

<PageTitle>@L["Public_Title"]</PageTitle>

<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-primary-600 via-primary-700 to-primary-900 overflow-hidden">
	<div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23ffffff%22%20fill-opacity%3D%220.05%22%3E%3Cpath%20d%3D%22M36%2034v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6%2034v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6%204V0H4v4H0v2h4v4h2V6h4V4H6z%22%2F%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E')] opacity-30"></div>
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28 relative">
		<div class="text-center max-w-3xl mx-auto">
			<h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white tracking-tight leading-tight drop-shadow-sm">
				@L["Hero_Title"]
				<span class="block text-primary-200">@L["Hero_TitleHighlight"]</span>
			</h1>
			<p class="mt-6 text-lg md:text-xl text-primary-100 max-w-2xl mx-auto text-shadow">
				@L["Hero_Subtitle"]
			</p>
		</div>

		<!-- Search Box -->
		<div class="mt-10 max-w-3xl mx-auto">
			<div class="bg-white rounded-2xl shadow-2xl p-4 md:p-6 transform transition-all hover:scale-[1.01] duration-300">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
					<div>
						<label class="block text-xs font-medium text-gray-500 mb-1.5 uppercase tracking-wider">@L["Search_Label"]</label>
						<input type="text" placeholder="@L["Search_Placeholder"]" class="w-full px-4 py-2.5 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-shadow" />
					</div>
					<div>
						<label class="block text-xs font-medium text-gray-500 mb-1.5 uppercase tracking-wider">@L["Search_Region"]</label>
						<select class="w-full px-4 py-2.5 border border-gray-200 rounded-lg text-sm text-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-primary-500 transition-shadow">
							<option>@L["Search_AllRegions"]</option>
						</select>
					</div>
					<div>
						<label class="block text-xs font-medium text-gray-500 mb-1.5 uppercase tracking-wider">@L["Search_Service"]</label>
						<select class="w-full px-4 py-2.5 border border-gray-200 rounded-lg text-sm text-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-primary-500 transition-shadow">
							<option>@L["Search_AllServices"]</option>
							<option>@L["Specialty_General"]</option>
							<option>@L["Specialty_Orthodontics"]</option>
							<option>@L["Specialty_Cosmetic"]</option>
							<option>@L["Specialty_Surgery"]</option>
						</select>
					</div>
				</div>
				<div class="mt-4 flex justify-end">
					<button class="w-full md:w-auto px-8 py-2.5 bg-primary-600 text-white text-sm font-semibold rounded-lg hover:bg-primary-700 transition-all duration-200 shadow-sm hover:shadow-md hover:-translate-y-0.5 active:translate-y-0">
						@L["Search_Button"]
					</button>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Statistics Section -->
<section class="py-16 bg-white border-b border-gray-100">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
			<div class="p-6 transition-transform hover:scale-105 duration-300">
				<div class="text-4xl font-extrabold text-primary-600">500+</div>
				<div class="mt-2 text-sm font-medium text-gray-500 uppercase tracking-wider">@L["Stats_Dentists"]</div>
			</div>
			<div class="p-6 transition-transform hover:scale-105 duration-300">
				<div class="text-4xl font-extrabold text-primary-600">14</div>
				<div class="mt-2 text-sm font-medium text-gray-500 uppercase tracking-wider">@L["Stats_Regions"]</div>
			</div>
			<div class="p-6 transition-transform hover:scale-105 duration-300">
				<div class="text-4xl font-extrabold text-primary-600">50K+</div>
				<div class="mt-2 text-sm font-medium text-gray-500 uppercase tracking-wider">@L["Stats_Patients"]</div>
			</div>
		</div>
	</div>
</section>

<!-- Map Section -->
<section id="find-dentist" class="py-16 bg-gray-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-10">
			<h2 class="text-3xl font-bold text-gray-900">@L["Map_Title"]</h2>
			<p class="mt-3 text-gray-500">@L["Map_Subtitle"]</p>
		</div>
		<div class="bg-white rounded-2xl shadow-lg overflow-hidden">
			<img src="img/map-placeholder.svg" alt="@L["Map_Title"]" class="w-full h-auto" />
		</div>
	</div>
</section>

<!-- Dentist Search Results -->
<section id="services" class="py-16 bg-white">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-10">
			<h2 class="text-3xl font-bold text-gray-900">@L["Dentists_Title"]</h2>
			<p class="mt-3 text-gray-500">@L["Dentists_Subtitle"]</p>
		</div>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			<!-- Dentist Card 1 -->
			<div class="bg-white border border-gray-100 rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center text-primary-700 font-bold text-lg shadow-inner">
						AK
					</div>
					<div>
						<h3 class="font-semibold text-gray-900 text-lg">Xusniddin Salomov</h3>
						<p class="text-sm text-primary-600 font-medium">@L["Specialty_General"]</p>
					</div>
				</div>
				<div class="flex items-center gap-1 mb-4">
					<div class="flex text-yellow-400 text-sm">
						<span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
					</div>
					<span class="text-xs text-gray-400 ml-1 font-medium">5.0 (128 @L["Dentists_Reviews"])</span>
				</div>
				<div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-50">
					<span class="text-xs text-gray-500 flex items-center gap-1">
						<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
						Kosonsoy
					</span>
					<button class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors group flex items-center gap-1">
						@L["Dentists_BookNow"]
						<span class="group-hover:translate-x-0.5 transition-transform">→</span>
					</button>
				</div>
			</div>

			<!-- Dentist Card 2 -->
			<div class="bg-white border border-gray-100 rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-14 h-14 bg-green-100 rounded-full flex items-center justify-center text-green-700 font-bold text-lg shadow-inner">
						NR
					</div>
					<div>
						<h3 class="font-semibold text-gray-900 text-lg">Azizbek Salomov</h3>
						<p class="text-sm text-primary-600 font-medium">@L["Specialty_Orthodontics"]</p>
					</div>
				</div>
				<div class="flex items-center gap-1 mb-4">
					<div class="flex text-yellow-400 text-sm">
						<span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
					</div>
					<span class="text-xs text-gray-400 ml-1 font-medium">4.9 (96 @L["Dentists_Reviews"])</span>
				</div>
				<div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-50">
					<span class="text-xs text-gray-500 flex items-center gap-1">
						<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
						Qo'qumboy
					</span>
					<button class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors group flex items-center gap-1">
						@L["Dentists_BookNow"]
						<span class="group-hover:translate-x-0.5 transition-transform">→</span>
					</button>
				</div>
			</div>

			<!-- Dentist Card 3 -->
			<div class="bg-white border border-gray-100 rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-14 h-14 bg-purple-100 rounded-full flex items-center justify-center text-purple-700 font-bold text-lg shadow-inner">
						FJ
					</div>
					<div>
						<h3 class="font-semibold text-gray-900 text-lg">Izzatbek Salomov</h3>
						<p class="text-sm text-primary-600 font-medium">@L["Specialty_Cosmetic"]</p>
					</div>
				</div>
				<div class="flex items-center gap-1 mb-4">
					<div class="flex text-yellow-400 text-sm">
						<span>★</span><span>★</span><span>★</span><span>★</span><span class="text-gray-300">★</span>
					</div>
					<span class="text-xs text-gray-400 ml-1 font-medium">4.8 (74 @L["Dentists_Reviews"])</span>
				</div>
				<div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-50">
					<span class="text-xs text-gray-500 flex items-center gap-1">
						<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
						Kosonoy
					</span>
					<button class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors group flex items-center gap-1">
						@L["Dentists_BookNow"]
						<span class="group-hover:translate-x-0.5 transition-transform">→</span>
					</button>
				</div>
			</div>
		</div>
	</div>
</section>

