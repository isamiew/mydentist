@using MyDentist.Web.Shared.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Global> L

<footer class="bg-gray-950 text-gray-400">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-14">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-10 pb-12 border-b border-gray-800">

            <!-- Brand -->
            <div class="col-span-2 md:col-span-1">
                <div class="flex items-center gap-2.5 mb-4">
                    <div class="w-9 h-9 rounded-xl bg-gradient-to-br from-primary-500 to-primary-700 flex items-center justify-center shrink-0">
                        <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M19 11h-6V5a1 1 0 00-2 0v6H5a1 1 0 000 2h6v6a1 1 0 002 0v-6h6a1 1 0 000-2z"/>
                        </svg>
                    </div>
                    <span class="text-lg font-bold text-white">My<span class="text-primary-400">Dentist</span></span>
                </div>
                <p class="text-sm leading-relaxed">@L["Footer_Description"]</p>
            </div>

            <!-- Platform -->
            <div>
                <h4 class="text-white font-semibold text-sm mb-4">@L["Footer_Platform"]</h4>
                <ul class="space-y-3 text-sm">
                    <li><a href="#find-dentist" class="hover:text-white inline-block transition-colors duration-200">@L["Nav_FindDentist"]</a></li>
                    <li><a href="#services" class="hover:text-white inline-block transition-colors duration-200">@L["Nav_Services"]</a></li>
                </ul>
            </div>

            <!-- Support -->
            <div>
                <h4 class="text-white font-semibold text-sm mb-4">@L["Footer_Support"]</h4>
                <ul class="space-y-3 text-sm">
                    <li><a href="#" class="hover:text-white inline-block transition-colors duration-200">@L["Footer_HelpCenter"]</a></li>
                    <li><a href="#" class="hover:text-white inline-block transition-colors duration-200">@L["Footer_Contact"]</a></li>
                    <li><a href="#" class="hover:text-white inline-block transition-colors duration-200">@L["Footer_Privacy"]</a></li>
                </ul>
            </div>

            <!-- For Dentists -->
            <div>
                <h4 class="text-white font-semibold text-sm mb-4">@L["Footer_ForDentists"]</h4>
                <ul class="space-y-3 text-sm">
                    <li><a href="/login" class="hover:text-white inline-block transition-colors duration-200">@L["Nav_DoctorLogin"]</a></li>
                    <li><a href="#" class="hover:text-white inline-block transition-colors duration-200">@L["Footer_JoinNetwork"]</a></li>
                </ul>
            </div>
        </div>

        <div class="pt-8 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm">
            <p>&copy; @DateTime.Now.Year MyDentist. @L["Footer_Rights"]</p>
            <div class="flex items-center gap-6">
                <a href="#" class="hover:text-white transition-colors duration-200">@L["Footer_Privacy"]</a>
                <a href="#" class="hover:text-white transition-colors duration-200">@L["Footer_Terms"]</a>
            </div>
        </div>
    </div>
</footer>
